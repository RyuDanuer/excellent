#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.expand_path(File.dirname(__FILE__) + "/../lib"))

require 'simplabs/excellent'
require 'pathname'

excellent = Simplabs::Excellent::Runner.new

ARGV.each do |arg|
  if File.file?(arg)
    excellent.check_file(arg)
  elsif File.directory?(arg)
    Dir.glob("#{arg}/**/*.rb").each { |file| puts file; excellent.check_file(file) }
  else
    puts "\n** Excellent cannot find '#{arg}'\n\n"
    exit 1
  end
end

puts "\nExcellent found #{excellent.errors.size} errors.\n"
excellent.errors.each do |error|
  puts "  * File #{error.filename}, line #{error.line_number}: #{error.message}"
end
puts ''

exit 0
